<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QR Web Clean UI</title>
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
    <style>
        body { font-family: sans-serif; text-align: center; padding: 20px; }
        
        /* 1. Khung chứa scanner */
        #reader { 
            width: 100%; 
            max-width: 500px; 
            margin: 0 auto; 
            border: 1px solid #ddd !important;
        }

        /* 2. CSS TRIỆT TIÊU CÁC PHẦN THỪA */
        /* Ẩn dòng "Scan an Image File" */
        #reader__dashboard_section_swaplink,
        /* Ẩn dropdown "Select Camera" và nhãn của nó */
        #reader__dashboard_section_csr select,
        #reader__dashboard_section_csr span {
            display: none !important;
            visibility: hidden !important;
        }

        /* Tùy chỉnh nút bấm cho đẹp giống App */
        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 10px 0;
        }
    </style>
</head>
<body>

    <h2>Quét mã QR trên Web</h2>
    
    <div id="reader"></div>

    <div id="result" style="margin-top: 20px; color: blue;"></div>

    <script>
        function onScanSuccess(decodedText, decodedResult) {
            document.getElementById('result').innerText = `Đã tìm thấy: ${decodedText}`;
        }

        // Cấu hình Scanner tập trung vào Camera
        let html5QrcodeScanner = new Html5QrcodeScanner(
            "reader", 
            { 
                fps: 10, 
                qrbox: { width: 250, height: 250 },
                // Chỉ cho phép quét từ Camera (Tự động ẩn phần quét file ảnh)
                supportedScanTypes: [Html5QrcodeScanType.SCAN_TYPE_CAMERA],
                // Ghi nhớ camera sau cho lần sau
                rememberLastUsedCamera: true 
            },
            /* verbose= */ false
        );
        
        html5QrcodeScanner.render(onScanSuccess);
    </script>
</body>
</html>