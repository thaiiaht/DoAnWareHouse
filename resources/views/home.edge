                            <button class="btn-submit" type="submit">Đăng nhập</button>
                        </form>
                    </div>
                </div>

                {{-- Register Popup --}}
                <div id="registerModal" class="modal">
                    <div class="modal-content">
                        <span class="close" onclick="closeRegister()">&times;</span>
                        <h2>Đăng ký</h2>
                        <form class="auth-form" id="registerForm" method="post" action="/auth/register">
                            <div class="form-group">
                                <label>Họ và tên</label>
                                <input class="input-field" type="text" id="fullName" placeholder="Nguyen Van A" required>
                            </div>   
                            <div class="form-group">
                                <label>Email</label>
                                <input class="input-field" type="email" id="emailR" placeholder="example@mail.com" required>
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu</label>
