                        <form class="auth-form" id="loginForm">
                            <div class="form-group">
                                <label>Email</label>
                                <input class="input-field" type="email" id="email" placeholder="example@mail.com" required>
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input class="input-field" type="password" id="password" placeholder="••••••" required>
