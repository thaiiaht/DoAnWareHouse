    <div id="notification">
        <script>
            if (!window.toastShown) { 
                window.toastShown = true;
                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    timeOut: "3000",
                    positionClass: "toast-bottom-right"
                };
            }
        </script>
    </div>

    <div class="container">
        
        {{-- Welcome Card --}}
        <div class="profile-block">
            <div class="profile-info">
                <div class="profile-header">
                    <div class="profile-avatar">
                        <i class="fa-solid fa-user-tie fa-xl"></i>
                    </div>
                    <div>
                        <div class="profile-name">{{user?.fullName ?? 'Khách'}}</div>
                        <div class="profile-role">{{ user?.email ?? 'Vui lòng đăng nhập để quản lý'}}</div>
                    </div>
                </div>
            </div>
            <div class="profile-stats">
                    {{-- LOGIC CHECK ROLE: Chỉ hiện nút nếu là Gatekeeper --}}
                @if(user?.role === 'gatekeeper') 
                    <button id="btnGateAction" class="btn-gate-action">
                        <div class="btn-icon">
                            <i class="fa-solid fa-truck-ramp-box"></i>
                        </div>
                        <span>Bắt đầu nhập hàng</span>
                    </button>
                    <meta name="csrf-token" content="{{ csrfToken }}">
                @endif
                <div class="stat-box">
                    <span class="stat-label">Vai trò</span>
                    <span class="stat-value">{{ user?.role ?? 'Guest'}}</span>
                </div>
            </div>
        </div>

        {{-- Warehouse Grid --}}
        <div class="warehouse-grid">
            @each(wh in warehouses)
                {{-- Thêm data-capacity để JS tính toán % --}}
                <div class="warehouse-card" id="{{ wh.id }}-card" data-capacity="{{ wh.capacity }}">
                    <div class="card-header">
                        <div class="warehouse-icon">
                            <i class="fa-solid fa-warehouse"></i>
                        </div>
                        <div class="warehouse-status status-active">Hoạt động</div>
                    </div>
                    
                    <div class="warehouse-name">{{ wh.name }}</div>
                    
                    <div class="warehouse-info">
                        <div class="info-row">
                            <span class="info-label">Sức chứa</span>
                            <span class="info-value">{{ wh.capacity }}</span>
                        </div>
                        
                        <div class="info-row">
                            <span class="info-label">Hiện có</span>
                            <span class="info-value" id="{{ wh.id }}-current">{{ wh.current }}</span>
                        </div>
                        
                        <div class="info-row">
                            <span class="info-label">Còn trống</span>
                            <span class="info-value" id="{{ wh.id }}-remain">{{ wh.remaining }}</span>
                        </div>
                    </div>

                    {{-- Progress Bar --}}
                    <div class="progress-track">
                        {{-- Tính toán width inline cho lần load đầu tiên --}}
                        <div class="progress-fill" 
                            id="{{ wh.id }}-progress"
                            style="width: {{ (wh.current / wh.capacity) * 100 }}%">
                        </div>
                    </div>
                </div>
            @endeach
        </div> 
        <div class="banner">
            <img class="banner-img" src="/resources/images/last.png" >
        </div>
    </div>
    </body>
